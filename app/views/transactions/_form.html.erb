<%= form_with(model: transaction, url: transaction_create_deposit_path) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :saldo_transferido %>
    <%= form.number_field :transaction_value %>
  </div>

  <div class="field">
    <%= form.label :tipo_de_transacao %>
    <%= form.text_field :transaction_kind, value: "depositar" %>
  </div>

  <div class="field">
    <%= form.label :conta_que_recebera_o_deposito%>
    <%= form.text_field :account_id, value: 1 %>
  </div>

  <div class="field">
    <%= form.label :nome%>
    <%= form.text_field :depositor_name, value: "luan" %>
  </div>

   <div class="field">
    <%= form.label :numero %>
    <%= form.number_field :depositor_phone, value: 88999987 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
